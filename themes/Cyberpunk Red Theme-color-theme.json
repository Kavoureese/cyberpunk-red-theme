{
	"name": "Cyberpunk Red Theme",
	"type": "dark",
	"colors": {
		// VS Code
			// Title Bar (Top Bar)
			"titleBar.activeBackground": "#140009",
			"titleBar.activeForeground": "#ff8ba8",
			"titleBar.inactiveBackground": "#140009",
			"titleBar.inactiveForeground": "#ff8ba8",

			// Activity Bar (Left-Most Bar)
			"activityBarBadge.background": "#35ffff",
			"activityBarBadge.foreground": "#140009",
			"activityBar.background": "#060608",
			"activityBar.foreground": "#ff8ba8",
			"activityBar.inactiveForeground": "#ff8ba8",

			// Side Bar (Folder view, right next to Activity Bar)
			"sideBar.background": "#0a0b0e",
			"sideBar.border": "#101116",
			"sideBar.foreground": "#ff8ba8",
			"sideBarTitle.foreground": "#bbbbbb",
			"sideBarSectionHeader.background": "#240000",
			"sideBarSectionHeader.border": "#ff0055",
			"sideBarSectionHeader.foreground": "#ff8ba8",

			// Line Number Column
			"editorGutter.background": "#060608",

			// Status Bar (Bottom Bar)
			"statusBar.background": "#140009",
			"statusBar.foreground": "#ff8ba8",
			"statusBar.debuggingBackground": "#ff005580",
			"statusBar.debuggingForeground": "#35ffff",

			// Badges and Buttons
			"badge.background": "#1d000ae5",
			"badge.foreground": "#ff0055",
			"button.background": "#1d000ae5",
			"button.foreground": "#ff0055",

			// List Dropdown (Command palette etc)
			"list.activeSelectionBackground": "#140009",
			"list.hoverBackground": "#140009",
			"list.activeSelectionForeground": "#ff8ba8",
			"list.hoverForeground": "#ff8ba8",

			// Terminal
			"terminalCursor.foreground": "#35ffff",
			"terminal.background": "#060608",

			// Git Decorations
			"gitDecoration.addedResourceForeground": "#ff0055",
			"gitDecoration.modifiedResourceForeground": "#ff8ba8",
			"gitDecoration.untrackedResourceForeground": "#35ffff",
			"gitDecoration.ignoredResourceForeground": "#906565",

		// Editor (Code panel)
		"editor.background": "#060608",
		"editor.foreground": "#35ffff",	// Default color of text for editor

			// Cursor
			"editorCursor.foreground": "#35ffff",

			// Input fields
			"input.background": "#140009",
			"input.border": "#ff0055",
			"input.foreground": "#ff8ba8",
			"input.placeholderForeground": "#ff8ba8",

			// Widgets (Find/Replace etc)
			"editorWidget.background": "#1d000ae5",
			"editorWidget.border": "#ff0055",

			// Selection
			"editor.selectionBackground": "#ff000041",

			// Dropdown	(Panel shown when right-click)
			"dropdown.background": "#1d000ae5",
			"dropdown.border": "#ff0055",
			"dropdown.foreground": "#ff8ba8",

			// Editor Line Numbers
			"editorLineNumber.foreground": "#ff00557e",
			"editorLineNumber.activeForeground": "#35ffff",

			// Panels (Terminal, etc)
			"panel.background": "#101116",
			"panel.border": "#ff0055",
			"panelTitle.activeBorder": "#ff0055",
			"panelTitle.activeForeground": "#ff0055",
			"panelTitle.inactiveForeground": "#eb4d81de",

			// Scroll Bar
			"scrollbarSlider.background": "#ff000041",
			"scrollbarSlider.activeBackground": "#ff0055",
			"scrollbarSlider.hoverBackground": "#ff005578",

			// Tabs
			"tab.activeBackground": "#151621",
			"tab.inactiveBackground": "#060608",
			"tab.activeBorder": "#35ffff",
			"tab.hoverBackground": "#151621",
			"tab.hoverBorder": "#35ffff",
			"tab.border": "#101116",
			"tab.activeForeground": "#35ffff",
			"tab.inactiveForeground": "#eb4d81de",
			"editorGroupHeader.tabsBackground": "#060608",
			"editorGroupHeader.noTabsBackground": "#060608",

			// TODO: Figure out nested bracket colors
			"editorBracketHighlight.foreground1": "#ff0055",
			"editorBracketHighlight.foreground2": "#ff0055",
			"editorBracketHighlight.foreground3": "#ff0055",
			"editorBracketHighlight.foreground4": "#ff0055",
			"editorBracketHighlight.foreground5": "#ff0055",
			"editorBracketHighlight.foreground6": "#ff0055",
			"editorBracketHighlight.unexpectedBracket.foreground": "#fcee0a"
	},
	"tokenColors": [
		{
			"name": "Comments and preprocessor",
			"scope": [
				"comment",
				"comment.block",
				"comment.block.documentation",
				"comment.line"
			],
			"settings": {
				"foreground": "#8a84e4",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Preprocessor definitions and other",
			"scope": [
				"entity.name.function.preprocessor",
				"support.type.property-name.json.comments",		// JSON field name
				"variable.other.member.c"						// struct.member
			],
			"settings": {
				"foreground": "#8a84e4"
			}
		},
		{
			"name": "Function declarations",
			"scope": [
				"entity.name.function"
			],
			"settings": {
				"foreground": "#b9003e"
			}
		},
		{
			"name": "Keywords,Operator Keywords, Variable Types, Structs",
			"scope": [
				"keyword",
				"keyword.control",
				"storage.modifier",
				"storage.type",
				"entity.name.type.c",						// Struct
				"punctuation.separator.dot-access.c",		// '.' struct member access
				"punctuation.separator.pointer-access.c"	// '->' struct pointer member access
			],
			"settings": {
				"foreground": "#ff0055"
			}
		},
		{
			"name": "Numbers, Literals, Constants",
			"scope": [
				"constant",
				"keyword.other.unit.exponent.decimal.c",		// 'e' exponent keyword
				"keyword.operator.minus.exponent.decimal.c",	// '-' in floating point literals
				"keyword.other.unit.binary.c",					// '0b' prefix for binary numbers
				"keyword.other.unit.suffix.floating-point.c",	// 'f' suffix for f32 numbers
				"keyword.other.unit.octal.c",					// '0' prefix for octal numbers
				"keyword.other.unit.suffix.integer",			// 'U' suffix
				"keyword.other.unit.hexadecimal"				// '0x' prefix
			],
			"settings": {
				"foreground": "#b7faff"
			}
		},
		{
			"name": "Strings",
			"scope": [
				"string",
				"constant.character"
			],
			"settings": {
				"foreground": "#a0d3ff"
			}
		},
		{
			"name": "String Placeholders (printf identifiers)",
			"scope": "constant.other.placeholder",
			"settings": {
				"foreground": "#00ffc8"
			}
		}
	]
}
